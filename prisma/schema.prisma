generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int          @id @default(autoincrement())
  name         String
  email        String       @unique
  password     String
  role         Role         @default(USER)
  tokens       String?

  deletedAt    DateTime?

  created_at   DateTime     @default(now())
  updated_at   DateTime     @updatedAt

  otps            EmailOTP[]
  refreshTokens   RefreshToken[]
}

model EmailOTP {
  id            Int          @id @default(autoincrement())
  userId        Int?
  email         String
  code          String
  purpose       OtpPurpose
  expiresAt     DateTime
  used          Boolean      @default(false)
  attempts      Int          @default(0)
  blockedUntil  DateTime?
  created_at    DateTime     @default(now())

  user  User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
}

model RefreshToken {
  id            Int          @id @default(autoincrement())
  userId        Int
  tokens        String       @unique
  device        String?
  ipAddress     String?
  userAgent     String?
  expiresAt     DateTime
  revoked       Boolean      @default(false)
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokens])
}

enum Role {
  ADMIN
  USER
}

enum OtpPurpose {
  LOGIN
  REGISTER
  RESET_PASSWORD
}
